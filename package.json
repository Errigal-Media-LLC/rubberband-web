{
  "name": "rubberband-web",
  "version": "0.0.2",
  "repository": "https://github.com/delude88/rubberband-web.git",
  "author": "delude88 <tobias.hegemann@googlemail.com>",
  "license": "GPL-2.0-or-later",
  "type": "module",
  "module": "dist/teckos.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "public"
  ],
  "scripts": {
    "type-check": "tsc",
    "dev": "webpack --mode=development --watch",
    "build": "npm run build:wasm && npm run build:worklet",
    "build:worklet": "npm run type-check && webpack --mode=production",
    "build:wasm": "cd wasm && ./build.sh",
    "build:web": "tsc --project tsconfig.web.json",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false,
    "crypto": false
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@types/audioworklet": "^0.0.33",
    "@types/emscripten": "^1.39.6",
    "babel-loader": "^8.2.5",
    "jest": "^29.1.0",
    "ts-jest": "^29.0.2",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
